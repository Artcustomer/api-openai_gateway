{% extends 'application/base_application.html.twig' %}

{% block title %}{{ app_name }} | {{ 'main_menu.tools.links'|trans }}{% endblock %}

{% block applicationPageTitle %}{{ 'main_menu.tools.links'|trans }}{% endblock %}

{% block applicationSection %}

    <div class="row template-links">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Useful links</h5>
                    <div class="links-list">
                        {% for item in data %}
                            <div class="post-item clearfix">
                                <img src="{{ asset('img/link-default.png') }}" alt="">
                                <h4><a href="{{ item.link }}" target="_blank">{{ item.title }}</a></h4>
                                <p>{{ item.description }}</p>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
