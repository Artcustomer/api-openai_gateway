{% if outputs %}

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ 'title.debug_bar'|trans }}</h5>
                    <div class="accordion" id="accordionDebugBar">
                        {% for index,output in outputs %}
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingDebugItem-{{ index }}">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                            data-bs-target="#collapseDebugItem-{{ index }}" aria-expanded="false" aria-controls="collapseDebugItem-{{ index }}">
                                        <span class="badge bg-primary">{{ output.method }}</span>&nbsp;
                                        <span class="badge bg-secondary">{{ output.code }}</span>&nbsp;
                                        {{ output.url }}
                                    </button>
                                </h2>
                                <div id="collapseDebugItem-{{ index }}" class="accordion-collapse collapse" aria-labelledby="headingDebugItem-{{ index }}"
                                     data-bs-parent="#accordionDebugBar" style="">
                                    <div class="accordion-body">
                                        {{ output.content }}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% endif %}
