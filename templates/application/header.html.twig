<header id="header" class="header fixed-top d-flex align-items-center">
    <div class="d-flex align-items-center justify-content-between">
        <a href="/" class="logo d-flex align-items-center">
            <img src="{{ asset('img/logo.png') }}" alt="">
            <span class="d-none d-lg-block">{{ app_name }}</span>
        </a>
    </div>
    <i class="bi bi-list toggle-sidebar-btn"></i>

    <nav class="header-nav ms-auto">
        <ul class="d-flex align-items-center">
            <li class="nav-item dropdown pe-3">
                <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                    <img src="{{ asset('img/default-profile-img.png') }}" alt="Profile" class="rounded-circle">
                    <span class="d-none d-md-block dropdown-toggle ps-2">{{ app.user.username }}</span>
                </a>

                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                    <li class="dropdown-header">
                        <h6>{{ app.user.fullName }}</h6>
                        <span>{{ app.user.description }}</span>
                    </li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>

                    {% for userMenuItemKey,userMenuItem in userMenuData %}
                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="{{ path(userMenuItem.path) }}">
                                <i class="bi {{ userMenuItem.icon }}"></i>
                                <span>{{ userMenuItem.title|trans }}</span>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </li>
        </ul>
    </nav>
</header>
